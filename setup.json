{
	"vhost": "http://fed.dev",
	"src": {
		"scripts": ["./scripts/*.js", "./scripts/**/*.js"],
		"styles": "./styles/app.scss",
		"images": "./images/**",
		"cdnBackups": "./node_modules/",
		"svgs": "./icons/svg/*.svg",
		"iconTemplate" : "./icons/iconfont.template",
		"fonts": "./fonts/**"
	},
	"dest": {
		"js": "../public/dist/js/",
		"css": "../public/dist/css/",
		"sass": "./styles/common/",
		"images": "../public/dist/images/",
		"generatedFonts": "./fonts/",
		"fonts": "../public/dist/fonts/"
	},
	"watch": {
		"views": [
			"../*.php",
			"../templates/*.php",
			"../lib/*.php",
			"../*.html",
			"../**/*.html",
			"../**/**/*.html"
		],
		"scripts": "./scripts/**",
		"styles": "./styles/**"
	}
}
