{
	"vhost": "http://fed.dev",
	"src": {
		"scripts": ["./scripts/*.ts", "./scripts/**/*.ts", "./scripts/**/**/*.ts"],
		"stylesApp": "./styles/app.scss",
		"styles": "./styles/",
		"images": "./images/**",
		"cdns": "./node_modules/",
		"svgs": "./icons/svg/*.svg",
		"iconTemplate" : "./icons/iconfont.template",
		"fonts": "./fonts/**"
	},
	"dest": {
		"js": "../public/dist/js/",
		"css": "../public/dist/css/",
		"sass": "./styles/common/",
		"images": "../public/dist/images/",
		"generatedFonts": "./fonts/",
		"fonts": "../public/dist/fonts/"
	},
	"watch": {
		"views": [
			"../public/*.php",
			"../public/**/*.php",
			"../*.php",
			"../templates/*.php",
			"../lib/*.php",
			"../*.html",
			"../**/*.html",
			"../**/**/*.html"
		],
		"scripts": "./scripts/**",
		"styles": "./styles/**"
	}
}
